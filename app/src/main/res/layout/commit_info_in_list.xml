<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_number"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_text_view_for_number"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorDefaultBlack"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_commit_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="Commit author name"
        android:textSize="11sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="true"
        app:layout_constraintStart_toEndOf="@+id/textview_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_author_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="email"
        android:textColor="@color/colorDefaultBlack"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/textview_number"
        app:layout_constraintTop_toBottomOf="@+id/textview_commit_author_name" />

    <TextView
        android:id="@+id/textview_commit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Message"
        android:textColor="@color/colorBetweenGreyAndWhite"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/textview_number"
        app:layout_constraintTop_toBottomOf="@+id/textview_author_email" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorNotWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>